---
import GithubIcon from "./svgs/GithubIcon.astro";
const {title, tools, description, repo} = Astro.props
// const repo = undefined
---

<div class="flex flex-col justify-between bg-zinc-50 dark:bg-slate-700 border border-zinc-300 dark:border-slate-700 shadow-lg rounded overflow-hidden">
  <header class="w-full">
    <img src="https://developer.mozilla.org/en-US/docs/Learn/Common_questions/Web_mechanics/Pages_sites_servers_and_search_engines/web-site.jpg" alt="">
  </header>
  <main class="flex flex-col grow gap-1 p-3">
    <header class="flex justify-between gap-x-6 items-start">
      <h3 class="text-gray-900 dark:text-gray-300 font-semibold text-lg">{title}</h3>
    </header>
    <ul class="flex flex-wrap gap-x-2 text-gray-400 dark:text-gray-500 text-[.7rem]">
      {
        tools.map(tool =>
          <li>{tool}</li>
        )
      }
    </ul>
    <p class="mt-2 text-base text-gray-900 dark:text-gray-300">{description}</p>
  </main>
  { repo && <footer class="p-3">
    <a href={repo} target="_blank" class="w-fit flex items-center gap-2 border border-blue-700 px-2 py-1.5 fill-gray-900 dark:fill-gray-300 rounded">
      <GithubIcon width="20" height="20" />
      <span class="text-gray-900 dark:text-gray-300 text-sm">Ver repositorio</span>
    </a>
  </footer> }
</div>