---
const { href } = Astro.props
---

<a href={href} target="_blank" class="bg-zinc-700 dark:bg-slate-200 fill-slate-200 dark:fill-zinc-700 w-11 h-11 grid place-content-center p-0 rounded-full myshadow dark:[--shadow-color:9,15,26] hover:translate-y-0.5 hover:duration-300">
  <slot />
</a>

<style>
  .myshadow {
    --shadow-color: 99, 99, 104;
    box-shadow: 0px 0.8px 0.8px rgba(var(--shadow-color), 0.52),
    0px 2.1px 2.2px -0.7px rgba(var(--shadow-color), 0.48),
    0px 4.5px 4.8px -1.5px rgba(var(--shadow-color), 0.45),
    0px 9.6px 10.2px -2.2px rgba(var(--shadow-color), 0.42),
    -0.1px 19.2px 20.3px -2.9px rgba(var(--shadow-color), 0.39);
  }

  .shadowly {
    box-shadow: none;
  }
</style>